@model List<DogProject5.Models.DogStore>
@{
    ViewBag.Title = "Index";
}

<h2>Dog Store</h2>

<div class="row">
    <div class="col-md-4">
        <table class="table table-c table-hover">
            <tr>
                <th>
                    Id
                </th>
                <th> Pet Name</th>
                <th>Action</th>
                <th>Delete</th>

            </tr>
            @foreach (var c in Model)
            {
                <tr>
                    <td>@c.Id</td>

                    <td>@Html.ActionLink(c.PetName, "Details", "DogStore", new { id = c.Id }, new { @class = "" })</td>

                    <td>@Html.ActionLink("Edit", "Edit", "DogStore", new { id = c.Id }, new { @class = "btn btn-primary" })</td>
                    <td>
                        @using (Html.BeginForm("Delete", "DogStore", new { id = c.Id }, FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()<button type="submit" class="btn btn-danger">Delete</button>
                        }
                </td>

                </tr>
            }
        </table>
    </div>
</div>

<div class="col-md-5">
    @Html.ActionLink("Add New", "Create", "DogStore",null, new {@class="btn btn-info"})
</div>
